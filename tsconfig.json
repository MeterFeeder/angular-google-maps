{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "es2020",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@mfagm/core": [
        "dist/core/agm-core",
        "dist/core",
        "packages/core/src/public-api.ts"
      ],
      "@mfagm/markerclusterer": [
        "packages/markerclusterer/src/public-api.ts"
      ],
      "@mfagm/snazzy-info-window": [
        "packages/snazzy-info-window/src/public-api.ts"
      ],
      "@mfagm/drawing": [
        "packages/drawing/src/public-api.ts"
      ]
    },
    "types": [
      "googlemaps", "node", "jest"
    ],
    "useDefineForClassFields": false
  }
}
